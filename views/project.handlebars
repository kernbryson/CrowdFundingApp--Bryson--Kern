
<link rel="stylesheet" href="/public/css/style.css">
<div class="prjdiv">
  <h2 class="projectview id="createdProject" data-projectId = {{id}}>{{name}} <p class="text-right">Created by {{user.name}} on {{format_date date_created}}</p></h2>
  <p class="projdesc">{{description}}</p>
  
</div> 
{{#if logged_in}}
   <form id="comment-form" class="form new-project-form" >
      <div class="form-group">
        <input class="form-input" type="text" id="comment" name="comment" />
      </div>
      </form>
 <button class="btn btn-primary" id="commentBtn">Add comment</button>
</div>
{{else}}
<p class="text-center">Please Log In to add a comment</p>
{{/if}}
{{#if comments.length}}
{{#each comments as |comment|}}
  <div class='row'>
    <div class='card'>
      <div class='card-body'>
        <p class='card-text'>{{comment.description}}</p>
      </div>
      <div class='card-footer text-muted'>
        Posted by
        {{comment.user.username}}
        on
        {{comment.createdAt}}
      </div>
    </div>
  </div>
{{/each}}
{{/if}}
<script src="./js/comments.js"></script>